<%- include('../partials/header') %>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Flight No.</th>
            <th colspan="3" >Departs</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs.toLocaleDateString()%></td>
            <td><%=f.departs.toLocaleTimeString() %></td>
            <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>